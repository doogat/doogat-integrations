{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeMinor",
    ":automergePatch"
  ],
  "rangeStrategy": "auto",
  "automergeType": "pr",
  "automergeStrategy": "rebase-merge",
  "packageRules": [
    {
      "description": "uv: update lockfile for in-range updates",
      "matchManagers": [
        "uv"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["pep621"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
